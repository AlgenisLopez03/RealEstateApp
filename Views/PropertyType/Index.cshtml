@using RealEstateApp.Core.Application.ViewModels.PropertyType;
@model IEnumerable<PropertyTypeViewModel>;

@{
    ViewData["Title"] = "Mejoras";
}
<div class="container">
    <div class="row justify-content-center mt-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-evenly align-items-center">
                <h1>Tipos de Propiedad</h1>
                <a asp-action="Create" class="btn btn-outline-primary">Agregar Tipo de Propiedad</a>
            </div>
            <div class="row mt-2">
                @if (Model.Count() == 0)
                {
                    <div class="alert alert-warning" role="alert">
                        No hay tipos de propiedad creados
                    </div>
                }
                else
                {
                    <table class="table table-striped table-hover text-start">
                        <thead>
                            <tr>
                                <th>
                                    Nombre
                                </th>
                                <th>
                                    Descripción
                                </th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody class="">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center align-middle">@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td class="text-center align-middle">@Html.DisplayFor(modelItem => item.Description)</td>
                                    <td></td>
                                    <td class="text-center align-middle">
                                        <a asp-action="Edit" class="btn btn-primary col-md-4" asp-route-id="@item.Id">
                                            Editar
                                        </a>
                                        <a asp-action="Delete" class="btn btn-danger col-md-4" asp-controller="PropertyType" asp-route-id="@item.Id" onclick="return confirm('Estás seguro que quieres eliminar este tipo de propiedad, @item.Name?')">
                                            Eliminar
                                        </a>
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>